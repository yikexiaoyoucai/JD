<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="55dp"
    android:padding="10dp"
    android:id="@+id/lll"
    android:orientation="horizontal"
    >
    <RelativeLayout
        android:onClick="rl_sys"
        android:id="@+id/rl_sys"
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        >
        <ImageView
            android:layout_width="22dp"
            android:layout_height="23dp"
            android:src="@mipmap/sys"
            android:id="@+id/head_sys"
            android:layout_centerHorizontal="true"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="扫一扫"
            android:textColor="#999"
            android:textSize="10sp"
            android:layout_below="@+id/head_sys"
            />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl"
        android:layout_width="240dp"
        android:layout_height="30dp"
        android:layout_gravity="center"
        android:layout_marginLeft="10dp"
        android:background="@drawable/dot"
        android:gravity="center">

        <ImageView
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:src="@mipmap/sou" />

        <EditText
            android:id="@+id/head_sou"
            android:layout_width="250dp"
            android:layout_height="40dp"
            android:background="@null"
            android:gravity="center_vertical"
            android:hint="请输入商品名称"
            android:onClick="head_sou"
            android:paddingLeft="50dp"
            android:scrollbars="none"
            android:textSize="12sp" />

        <ImageView
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="20dp"
            android:src="@mipmap/dog" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        >
        <ImageView
            android:layout_width="23dp"
            android:layout_height="23dp"
            android:src="@mipmap/xx"
            android:layout_centerHorizontal="true"
            android:id="@+id/head_xiao"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="消息"
            android:textColor="#999"
            android:textSize="10sp"
            android:layout_below="@+id/head_xiao"
            />
    </RelativeLayout>
</LinearLayout>
